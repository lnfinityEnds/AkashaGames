<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:id="panelFondo" prefHeight="900.0"
	prefWidth="1300.0" styleClass="Fondobase"
	stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="views.LoginController">
	<center>
		<VBox spacing="20" alignment="CENTER"
			styleClass="login-container">
			<Label text="Akasha Games" styleClass="title" />
			<GridPane hgap="10" vgap="10" alignment="CENTER">
				<Label text="Usuario" styleClass="label" />
				<TextField fx:id="usernameField" GridPane.columnIndex="1" />

				<Label text="Contraseña" styleClass="label"
					GridPane.rowIndex="1" />
				<PasswordField fx:id="passwordField"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />

				<CheckBox text="Recuérdame" fx:id="rememberMe"
					GridPane.rowIndex="2" GridPane.columnSpan="2" alignment="CENTER" />
			</GridPane>
			<HBox spacing="20" alignment="CENTER">
				<Button text="Crear cuenta nueva" fx:id="createAccountButton"
					styleClass="action-button" />
				<Button text="Iniciar Sesión" fx:id="loginButton"
					styleClass="action-button" />
			</HBox>
		</VBox>
	</center>
</BorderPane>

